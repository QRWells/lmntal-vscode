{
  "name": "lmntal-vscode",
  "displayName": "lmntal-vscode",
  "description": "LMNtal language supports.",
  "author": {
    "name": "QRWells",
    "email": "wang@ueda.info.waseda.ac.jp",
    "url": "https://github.com/QRWells"
  },
  "publisher": "qr-ext",
  "license": "MIT",
  "keywords": [
    "lmntal",
    "formatter",
    "highlighting"
  ],
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "url": "https://github.com/QRWells/lmntal-vscode"
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lmntal-explorer",
          "title": "LMNtal Explorer",
          "icon": "resources/lmntal-explorer.svg"
        }
      ]
    },
    "views": {
      "lmntal-explorer": [
        {
          "id": "lmntal-outline",
          "name": "Outline",
          "type": "tree"
        },
        {
          "id": "lmntal.slimControl",
          "name": "Slim",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "lmntal.ilViewer",
          "group": "navigation",
          "when": "editorLangId == lmntal"
        },
        {
          "command": "lmntal.slim",
          "group": "navigation",
          "when": "editorLangId == lmntal"
        }
      ]
    },
    "commands": [
      {
        "command": "lmntal.ilViewer",
        "title": "IL Viewer",
        "category": "LMNtal",
        "enablement": "editorLangId == lmntal",
        "icon": "$(file-binary)"
      },
      {
        "command": "lmntal.slim",
        "title": "Slim",
        "category": "LMNtal",
        "enablement": "editorLangId == lmntal",
        "icon": "$(play)"
      },
      {
        "category": "LMNtal",
        "command": "lmntal.restartServer",
        "title": "Restart LMNtal Language Server"
      }
    ],
    "languages": [
      {
        "id": "lmntal",
        "aliases": [
          "LMNtal",
          "lmntal"
        ],
        "extensions": [
          "lmn"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "lmntal-il",
        "aliases": [
          "LMNtal-IL",
          "lmntal-il"
        ],
        "extensions": [
          "il"
        ],
        "configuration": "./language-configuration.il.json"
      }
    ],
    "grammars": [
      {
        "language": "lmntal",
        "scopeName": "source.lmn",
        "path": "./syntaxes/lmntal.tmLanguage.json"
      },
      {
        "language": "lmntal-il",
        "scopeName": "source.il",
        "path": "./syntaxes/lmntal.il.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "LMNtal",
      "properties": {
        "lmntal.slimPath": {
          "title": "SLIM Path",
          "type": "string",
          "default": "slim",
          "description": "Path to the slim executable."
        },
        "lmntal.slimArgs": {
          "title": "Slim Execution Arguments",
          "type": "array",
          "default": [
            "--hl",
            "--use-builtin-rule"
          ],
          "description": "Arguments for quick run program."
        },
        "lmntal.compilerPath": {
          "title": "Compiler Path",
          "type": "string",
          "default": "lmntal",
          "description": "Path to the lmntal compiler executable."
        },
        "lmntal.compilerArgs": {
          "title": "Compiler Arguments",
          "type": "string",
          "default": "-O3",
          "description": "Arguments for the lmntal compiler."
        },
        "lmntal.serverPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Set a custom path to a LMNtal LS binary.",
          "scope": "window"
        },
        "lmntal.customArgs": {
          "type": "array",
          "description": "Additional arguments that should be passed to the LMNtal LS binary.",
          "default": [],
          "scope": "window"
        },
        "lmntal.checkForUpdates": {
          "type": "boolean",
          "description": "Check for updates to the LMNtal LS binary.",
          "default": true,
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run esbuild-base --minify",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -w -p ./",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outdir=out --external:vscode --format=cjs --platform=node",
    "esbuild": "pnpm run esbuild-base --sourcemap",
    "esbuild-watch": "pnpm run esbuild-base --sourcemap --watch"
  },
  "devDependencies": {
    "@types/node": "^20.11.7",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "esbuild": "0.20.1",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "js-yaml": "^4.1.0",
    "typescript": "*"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "vscode-languageclient": "^9.0.1"
  }
}
