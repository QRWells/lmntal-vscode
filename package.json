{
  "name": "lmntal-vscode",
  "displayName": "lmntal-vscode",
  "description": "LMNtal language supports.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "url": "https://github.com/QRWells/lmntal-vscode"
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lmntal-explorer",
          "title": "LMNtal Explorer",
          "icon": "resources/lmntal-explorer.svg"
        }
      ]
    },
    "views": {
      "lmntal-explorer": [
        {
          "id": "lmntal-outline",
          "name": "Outline",
          "type": "tree"
        },
        {
          "id": "lmntal.slimControl",
          "name": "Slim",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "lmntal.ilViewer",
          "group": "navigation",
          "when": "editorLangId == lmntal"
        },
        {
          "command": "lmntal.slim",
          "group": "navigation",
          "when": "editorLangId == lmntal"
        }
      ]
    },
    "commands": [
      {
        "command": "lmntal.ilViewer",
        "title": "IL Viewer",
        "category": "LMNtal",
        "enablement": "editorLangId == lmntal",
        "icon": "$(file-binary)"
      },
      {
        "command": "lmntal.slim",
        "title": "Slim",
        "category": "LMNtal",
        "enablement": "editorLangId == lmntal",
        "icon": "$(play)"
      }
    ],
    "languages": [
      {
        "id": "lmntal",
        "aliases": [
          "LMNtal",
          "lmntal"
        ],
        "extensions": [
          "lmn"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "lmntal-il",
        "aliases": [
          "LMNtal-IL",
          "lmntal-il"
        ],
        "extensions": [
          "il"
        ],
        "configuration": "./language-configuration.il.json"
      }
    ],
    "grammars": [
      {
        "language": "lmntal",
        "scopeName": "source.lmn",
        "path": "./syntaxes/lmntal.tmLanguage.json"
      },
      {
        "language": "lmntal-il",
        "scopeName": "source.il",
        "path": "./syntaxes/lmntal.il.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "LMNtal",
      "properties": {
        "lmntal.slimPath": {
          "title": "Runtime Path",
          "type": "string",
          "default": "slim",
          "description": "Path to the slim executable."
        },
        "lmntal.compilerPath": {
          "title": "Compiler Path",
          "type": "string",
          "default": "lmntal",
          "description": "Path to the lmntal compiler executable."
        },
        "lmntal.compilerArgs": {
          "title": "Compiler Options",
          "type": "string",
          "default": "-O3",
          "description": "Options for the lmntal compiler."
        },
        "lmntal.fastRunArgs": {
          "title": "Fast Run Options",
          "type": "array",
          "default": [
            "--hl",
            "--use-builtin-rule"
          ],
          "description": "Options for the fast run."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/vscode": "^1.84.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.2.2"
  }
}