{
  "name": "lmntal-vscode",
  "displayName": "lmntal-vscode",
  "description": "LMNtal language supports.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lmntal-explorer",
          "title": "LMNtal Explorer",
          "icon": "resources/lmntal-explorer.svg"
        }
      ]
    },
    "views": {
      "lmntal-explorer": [
        {
          "id": "lmntal-outline",
          "name": "Outline",
          "type": "tree"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "lmntal.stateViewer",
          "group": "navigation",
          "when": "editorLangId == lmntal"
        },
        {
          "command": "lmntal.visualizer",
          "group": "navigation",
          "when": "editorLangId == lmntal"
        },
        {
          "command": "lmntal.ilViewer",
          "group": "navigation",
          "when": "editorLangId == lmntal"
        },
        {
          "command": "lmntal.slim",
          "group": "navigation",
          "when": "editorLangId == lmntal"
        }
      ]
    },
    "commands": [
      {
        "command": "lmntal.stateViewer",
        "title": "State Viewer",
        "category": "LMNtal",
        "enablement": "editorLangId == lmntal",
        "icon": "resources/lmntal-explorer.svg"
      },
      {
        "command": "lmntal.visualizer",
        "title": "Visualizer",
        "category": "LMNtal",
        "enablement": "editorLangId == lmntal"
      },
      {
        "command": "lmntal.ilViewer",
        "title": "IL Viewer",
        "category": "LMNtal",
        "enablement": "editorLangId == lmntal"
      },
      {
        "command": "lmntal.slim",
        "title": "Slim",
        "category": "LMNtal",
        "enablement": "editorLangId == lmntal"
      }
    ],
    "languages": [
      {
        "id": "lmntal",
        "aliases": [
          "LMNtal",
          "lmntal"
        ],
        "extensions": [
          "lmn"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lmntal",
        "scopeName": "source.lmn",
        "path": "./syntaxes/lmntal.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.1.3"
  }
}